<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".newLogin">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="175dp"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/loginment"

            ></ImageView>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:src="@drawable/enterplace"

            ></ImageView>

        <EditText
            android:id="@+id/editID"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@null"
            android:backgroundTint="#A5A5A5"
            android:fontFamily="@font/applesdgothicneol"
            android:hint="아이디"
            android:textColor="#172F57"
            android:textColorHint="#172F57"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:src="@drawable/enterplace"

            ></ImageView>


        <EditText
            android:id="@+id/editPassword"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:background="@null"
            android:backgroundTint="#A5A5A5"
            android:fontFamily="@font/applesdgothicneol"
            android:hint="비밀번호"
            android:textColor="#172F57"
            android:textColorHint="#172F57"
            android:textSize="15dp"
            android:textStyle="bold"
            android:inputType="textPassword"/>


        <ImageView
            android:id="@+id/buttonLogin"
            android:layout_width="280dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230dp"
            android:src="@drawable/btnsignin"></ImageView>


        <ImageView
            android:id="@+id/btnSignup"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:src="@drawable/gosignup"></ImageView>


    </FrameLayout>




</RelativeLayout>