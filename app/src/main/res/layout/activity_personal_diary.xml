<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffe6b3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorAccent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:src="@drawable/logo"
            android:textColor="@color/colorAccent">

        </ImageView>
    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="512dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnCommon"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/common"
                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/personal_click"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/timer"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:backgroundTint="#A5A5A5"
            android:fontFamily="@font/cartoon"
            android:textAlignment="center"
            android:textColor="#172F57"
            android:textColorHint="#172F57"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="230dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/border" />

        <EditText
            android:id="@+id/memory"
            android:layout_width="300dp"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:background="@null"
            android:fontFamily="@font/cartoon"
            android:gravity="top"
            android:hint="당신의 하루가 궁금해요!"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textColorHint="#5A5A5A"
            android:textSize="15dp"
            android:textStyle="bold" />


        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="310dp">

            <TextView
                android:id="@+id/save"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="250dp"
                android:fontFamily="@font/cartoon"
                android:text="저장하기"
                android:textSize="20dp" />

        </FrameLayout>


        <ImageView
            android:id="@+id/btnTopic"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"
            android:src="@drawable/callai"></ImageView>

        <TextView
            android:id="@+id/topic"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="420dp"
            android:background="@null"
            android:backgroundTint="#A5A5A5"
            android:fontFamily="@font/cartoon"
            android:hint="추천된 주제 나오는 칸"
            android:textAlignment="center"
            android:textColor="#6f6f6f"
            android:textColorHint="#172F57"
            android:textSize="15dp"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/chatbot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/chatbot"></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/nakigi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/nakigi"
                >
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            >
            <ImageView
                android:id="@+id/diary"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/diary_click"
                >
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/mypage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/mypage"></ImageView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>